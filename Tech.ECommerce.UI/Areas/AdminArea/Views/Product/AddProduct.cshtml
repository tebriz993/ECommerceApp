@using Tech.BusinessLogic.Dtos
@model ProductAddDto
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}


<div asp-validation-summary="All"></div>
<div class="row">   
    <div class="col-lg-12">
        <div class="card ">
            <div class="card-body">
                <h5 class="card-title">Product Form</h5>
                <form id="product-form">
                    <input type="hidden"  id="product-id"  asp-for="Id" />
                    <div class="mb-3 ">
                        <label for="product-name" class="form-label pt-0">Name</label>
                        <div class="">
                            <input class="form-control" type="text" asp-for=Name  id="product-name" placeholder="Product name">
                            <span asp-validation-for="Name" class="mt-3 text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 ">
                        <label for="product-price" class="form-label">Price</label>
                        <div class="">
                            <input class="form-control" type="number" asp-for=Price  id="product-price" placeholder="Price">
                            <span asp-validation-for="Price" class="mt-3 text-danger"></span>

                        </div>
                    </div>

                    <div class="mb-3 ">
                        <label for="product-image" class="form-label">Image</label>
                        <div class="">
                            <input class="form-control" type="file" asp-for=ImagePath  id="product-image" placeholder="Images">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="product-description" class="form-label">Description</label>
                        <textarea class="form-control" id="product-description" asp-for=Description  rows="4" placeholder="Your Description"></textarea>
                    </div>


                    <input type="hidden" id="product-category-id"  asp-for="CategoryId" />
                    <div class="mb-3">
                        <select class="form-select" id="product-category">
                        </select>
                        <span asp-validation-for="CategoryId" class="mt-3 text-danger"></span>
                    </div>
                    <button type="button" class="btn btn-primary w-lg" id="add-product-btn">Create Product</button>
                </form>
            </div>
        </div>
        <!-- end card -->
    </div>
</div>



                   
@section scripts{
    <script src="~/js/product.js"></script>
}